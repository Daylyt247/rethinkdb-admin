{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "target": "ES5",
    "outDir": "./build",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": true,
    "allowJs": true,
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": ["apps"]
}
